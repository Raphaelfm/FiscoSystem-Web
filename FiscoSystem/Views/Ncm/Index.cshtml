@model ReflectionIT.Mvc.Paging.PagingList<FiscoSystem.Models.NcmModels.NcmModel>


@{
    ViewData["Title"] = "Index";
}

<h1>Lista de NCMs</h1>

<form method="get" class="form-inline">
    <input name="filter" class="form-control" placeholder="filtro" value="@Model.RouteValue["Filter"]"/>
    <button type="submit" class="btn btn-info">
        <span class="glyphicon glyphicon-search" aria-hidden="true"></span> Procurar
    </button>
</form>

Total de NCMs : @Model.TotalRecordCount
<div>
    <vc:pager paging-list="@Model"></vc:pager>
</div>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Codigo NCM
            </th>
            <th>
                Descrição NCM
            </th>
            <th>
                -
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Usuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nivel1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nivel2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nivel3)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Versao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CodigoNcm)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DescricaoNcm)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnNcm)
            </td>
            <td>
                Raphael Ferreira de Moraes
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Data)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nivel1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nivel2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nivel3)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Versao)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.NcmId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.NcmId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.NcmId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
